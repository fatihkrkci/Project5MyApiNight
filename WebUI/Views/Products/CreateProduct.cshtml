@model CreateProductDto

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<form method="post">
    <div class="container">
        <br /><br />
        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <br />
        <label>Stok Adedi</label>
        <input type="text" asp-for="ProductStock" class="form-control" />
        <br />
        <label>Fiyatı</label>
        <input type="text" asp-for="ProductPrice" class="form-control" />
        <br />
        <button class="btn btn-primary">Ürünü Ekle</button>
    </div>
</form>