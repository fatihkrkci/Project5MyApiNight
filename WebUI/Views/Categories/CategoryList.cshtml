@model List<ResultCategoryDto>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<form method="post">
    <div class="container">
        <br /><br />
        <table class="table table-bordered">
            <tr>
                <th>#</th>
                <th>Kategori Adı</th>
                <th>Seçenekler</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td>
                        <a href="/Categories/UpdateCategory/@item.CategoryId" class="btn btn-warning">Güncelle</a>
                        <a href="/Categories/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </table>
        <a href="/Categories/CreateCategory/" class="btn btn-info">Yeni Kategori Ekle</a>
    </div>
</form>